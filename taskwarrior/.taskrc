# [Created by task 2.5.3 4/1/2021 10:12:06]
# Taskwarrior program configuration file.
# For more documentation, see http://taskwarrior.org or try 'man task', 'man task-color',
# 'man task-sync' or 'man taskrc'

# Use the command 'task show' to see all defaults and overrides

# Files
data.location=~/.task

# Dates
weekstart=Monday

# Filters
search.case.sensitive=no

# Aliases
alias.a=add
alias.@=context
alias.sch=scheduled
alias.s=long scheduled

# Context
context.home.read=+home
context.home.write=+home
context.work.read=+work
context.work.write=+work

# Custom reports

# someday
# pending tasks that are scheduled
report.someday.description=Tasks to do someday
report.someday.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,due.countdown,until.remaining,description,urgency
report.someday.labels=ID,Active,Age,D,P,Project,Tags,R,S,Due,Until,Description,Urg
report.someday.filter=status:pending and +someday

# simple
# pending tasks that are scheduled
report.simple.description=Simple list
report.simple.columns=id,description
report.simple.labels=Id,Description
report.simple.filter=status:pending and scheduled

# Plan
# pending tasks that are scheduled
report.plan.description=List of scheduled tasks
report.plan.columns=id,project,description,scheduled,scheduled.remaining,due.remaining,urgency
report.plan.labels=Id,Project,Description,Scheduled,In,Due,Urg
report.plan.sort=scheduled+
report.plan.filter=status:pending and scheduled
report.plan.dateformat=a, d b

# Planall
# all tasks that are scheduled
report.planall.description=List of all scheduled tasks (+waiting)
report.planall.columns=id,project,status.short,description,scheduled,scheduled.remaining,urgency
report.planall.labels=Id,Project,Status,Description,Scheduled,In,Urg
report.planall.sort=scheduled+
report.planall.filter=status:pending or status:waiting
report.planall.dateformat=a, d b

# Modify Ready report
report.ready.filter=+READY and -someday

# Urgency
urgency.user.tag.fun.coefficient=-2.0
urgency.user.tag.waiting.coefficient=-8.0
urgency.user.tag.next.coefficient=10.0

calendar.details=full
calendar.holidays=full

# Priorities
uda.priority.values=H,M,,L
urgency.uda.priority.L.coefficient=6
urgency.uda.priority.M.coefficient=3
urgency.uda.priority..coefficient=0
urgency.uda.priority.L.coefficient=-6


# Color Theme
rule.precedence.color=deleted,completed,due.today,due,active,uda.priority,tag.waiting,keyword.,overdue,scheduled.today,scheduled,blocked,blocking,recurring,tag.,project.,tagged,uda.

# Due
color.due=color13
color.due.today=green
color.overdue=red

# General decoration
color.label=
color.label.sort=
color.alternate=on color0
color.header=color4
color.footnote=color6
color.warning=color0 on color3
color.error=color6
color.debug=color6

## Task state
color.completed=green
color.deleted=red
color.active=color6
color.recurring=color4
color.until=
color.blocked=color15
color.blocking=color12

# Project
color.project.none=

# color.keyword.PR=color176
# color.keyword.fix=color103

# Priority
color.uda.priority.H=color203
color.uda.priority.M=
color.uda.priority.=
color.uda.priority.L=

# Tags
color.tag.next=
color.tag.waiting=color59
color.tag.none=
color.tagged=

color.scheduled=color110

# Report: burndown
color.burndown.done=color0 on color2
color.burndown.pending=color0 on color1
color.burndown.started=color0 on color3

# Report: history
color.history.add=color0 on color1
color.history.delete=color0 on color3
color.history.done=color0 on color6

# Report: summary
color.summary.background=on color0
color.summary.bar=color0 on color6

# Command: calendar
color.calendar.due=color0 on color9
color.calendar.due.today=color0 on color1
color.calendar.holiday=color0 on color3
color.calendar.overdue=color0 on color5
color.calendar.today=color0 on color4
color.calendar.weekend=on color0
color.calendar.weeknumber=color4
color.sync.added=color14
color.sync.changed=color9
color.sync.rejected=color13


# Taskwarrior tui
uda.taskwarrior-tui.calendar.months-per-row=4
uda.taskwarrior-tui.task-report.next.filter=+READY and -someday
uda.taskwarrior-tui.task-report.prompt-on-delete=true
uda.taskwarrior-tui.task-report.prompt-on-done=true
# uda.taskwarrior-tui.keyconfig.shortcut1=n
uda.taskwarrior-tui.shortcuts.1=~/scripts/add-sub-task.sh

# Command: undo
color.undo.after=color2
color.undo.before=color1
news.version=2.6.0
context=work
